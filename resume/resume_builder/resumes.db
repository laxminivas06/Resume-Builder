import sqlite3

# Create a new SQLite database (or connect to an existing one)
conn = sqlite3.connect('resumes.db')

# Create a new table for storing resumes
conn.execute('''
CREATE TABLE IF NOT EXISTS resumes (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT,
    email TEXT,
    phone TEXT,
    country TEXT,
    education TEXT,
    projects TEXT,
    work_experience TEXT,
    skills TEXT,
    achievements TEXT,
    pdf BLOB
)
''')

conn.commit()
conn.close()